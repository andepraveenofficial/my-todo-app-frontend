    "eslint-plugin-import": "^2.31.0",
    "eslint-plugin-prettier": "^5.2.1",
    "eslint-plugin-react": "^7.37.1",
    "eslint-plugin-react-hooks": "^5.1.0-rc.0",
    "eslint-plugin-react-refresh": "^0.4.12",
    "eslint-plugin-storybook": "^0.11.1",
    "globals": "^15.11.0",
    "husky": "^9.1.6",
    "postcss": "^8.4.49",
    "prettier": "^3.3.3",
    "storybook": "^8.4.6",
    "tailwindcss": "^3.4.15",
